<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B94AE"
    android:orientation="vertical"
    tools:context=".QuizResultado">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logoquizz" />

    <TextView
        android:id="@+id/txtNomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Nome do Jogador"
        android:textColor="#FBFDFC"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/baloo"
        android:text="VocÃª acertou:"
        android:textColor="#FBFDFC"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="#008D7A"
        android:fontFamily="@font/baloo"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:text="TextView"
        android:textColor="#FBFDFC"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/texrpont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/baloo"
        android:text="pontos"
        android:textColor="#FBFDFC"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="#17324D"
        android:fontFamily="@font/baloo"
        android:text="TELA INICIAL"
        android:textColor="#FBFDFC"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FAB501"
        android:fontFamily="@font/baloo"
        android:text="TENTAR NOVAMENTE"
        android:textColor="#FBFDFC"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

</LinearLayout>
