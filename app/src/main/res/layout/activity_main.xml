<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B94AE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo"
        android:text="QUIZ DE BANDEIRAS"
        android:textColor="#FDFDFB"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="267dp"
        android:layout_height="232dp"
        android:layout_gravity="center"
        android:src="@drawable/logoquizz" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="Insira seu nome para iniciar o quiz:"
        android:textColor="#FDFDFC"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:fontFamily="@font/baloo_2"
        android:inputType="text"
        android:textColor="#FDFDFB"
        android:textColorHighlight="#FDFDFB"
        android:textColorHint="#FDFDFB"
        android:textColorLink="#FDFDFB"
        android:textSize="18sp" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#17324D"
        android:fontFamily="@font/baloo"
        android:onClick="telaDois"
        android:text="INICIAR"
        android:textColor="#FCF9FE"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:backgroundTint="#EB3916"
        android:fontFamily="@font/baloo"
        android:onClick="encerrarApp"
        android:text="SAIR"
        android:textColor="#FCF9FE"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17324D"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/isabela" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_2"
                android:text="Aplicativo criado por:"
                android:textColor="#FEFDF8"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="ISABELA FERREIRA SANTOS"
                android:textColor="#FEFDF8" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="2571392312023"
                android:textColor="#FEFDF8" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
